@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

@using LabProject.Models
@model List<Teacher>

<div>
    <ul>
        @foreach (var teacher in Model)
        {
            <li>
                <a asp-controller="home" asp-action="details" asp-route-id="@teacher.Id">
                    @teacher.Name @teacher.Surname
                </a>
            </li>
            
        }
       
    </ul>
</div>